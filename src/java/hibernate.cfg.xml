<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.EmbeddedDriver</property>
    <property name="hibernate.connection.url">jdbc:derby:ChannelCreekDB;create=true</property>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping class="com.channelcreek.webservices.model.Game"/>
    <mapping class="com.channelcreek.webservices.model.Player"/>
    <mapping class="com.channelcreek.webservices.model.Schedule"/>
    <mapping class="com.channelcreek.webservices.model.Team"/>
  </session-factory>
</hibernate-configuration>
